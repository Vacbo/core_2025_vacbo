{
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "Open Quartus",
            "detail": "Launch Quartus Prime Lite IDE",
            "icon": {
                "id": "window"
            },
            "command": "quartus",
            "args": [
                "quartus/top_level"
            ],
            "options": {
                "statusbar": {
                    "color": "#9999ff"
                },
            },
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "close": true
            }
        },
        {
            "label": "Analisys & Syntesis",
            "detail": "Start Analisys & Syntesis",
            "icon": {
                "id": "run"
            },
            "command": "quartus_map",
            "args": [
                "top_level"
            ],
            "options": {
                "cwd": "${cwd}/quartus",
                "statusbar": {
                    "color": "#99ff99"
                }
            }
        },
        {
            "label": "Analisys & Elaboration",
            "detail": "Start Analisys & Elaboration",
            "icon": {
                "id": "run-all"
            },
            "command": "quartus_map",
            "args": [
                "top_level",
                "--analysis_and_elaboration",
                "--enable_register_retiming=on",
                "--enable_wysiwyg_resynthesis=on"
            ],
            "options": {
                "cwd": "${cwd}/quartus",
                "statusbar": {
                    "color": "#99ff99"
                }
            }
        }
    ]
}
